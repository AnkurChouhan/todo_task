<%- include('partials/header') %>

<div class="container">
  <h1>Todo List</h1>

  <!-- Alert (optional) -->
  <% if (typeof alert !== 'undefined' && alert) { %>
    <div class="alert"><%= alert %></div>
  <% } %>

  <!-- Add Task Form -->
  <form action="/add" method="POST" class="add-form">
    <input type="text" name="title" placeholder="Task Title" required>
    <select name="priority">
      <option value="Urgent">Urgent</option>
      <option value="High">High</option>
      <option value="Low">Low</option>
    </select>
    <button type="submit">+ Add Task</button>
  </form>

  <!-- Task List -->
  <ul class="task-list">
    <% tasks.forEach(task => { %>
      <li data-id="<%= task._id %>">
        <!-- Edit Form -->
        <form action="/<%= task._id %>?_method=PUT" method="POST" class="edit-form">
          <input 
            type="text" 
            name="title" 
            value="<%= task.title %>" 
            readonly 
            required
          >
          <select name="priority" disabled>
            <option value="Urgent" <%= task.priority === 'Urgent' ? 'selected' : '' %>>Urgent</option>
            <option value="High" <%= task.priority === 'High' ? 'selected' : '' %>>High</option>
            <option value="Low" <%= task.priority === 'Low' ? 'selected' : '' %>>Low</option>
          </select>
          <button type="submit" class="save-btn" style="display:none;" title="Save">‚úÖ</button>
        </form>

        <!-- Pencil Button to Enable Editing -->
        <button type="button" class="edit-btn" title="Edit" onclick="enableEdit(this)">‚úèÔ∏è</button>

        <!-- Delete Form -->
        <form 
          action="/<%= task._id %>?_method=DELETE" 
          method="POST" 
          style="display:inline;" 
          onsubmit="return confirm('Are you sure you want to delete this task?')">
          <button title="Delete">üóëÔ∏è</button>
        </form>
      </li>
    <% }) %>
  </ul>
</div>

<script>
  function enableEdit(button) {
    const li = button.closest('li');
    const form = li.querySelector('.edit-form');
    const titleInput = form.querySelector('input[name="title"]');
    const prioritySelect = form.querySelector('select[name="priority"]');
    const saveBtn = form.querySelector('.save-btn');

    // Enable editing fields
    titleInput.removeAttribute('readonly');
    prioritySelect.removeAttribute('disabled');
    saveBtn.style.display = 'inline';

    // Focus on title input
    titleInput.focus();
  }
</script>

<%- include('partials/footer') %>
